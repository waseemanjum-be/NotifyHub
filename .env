APP_NAME="NotifyHub"
ENV="local"
APP_HOST="0.0.0.0"
APP_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]

MONGODB_URI="mongodb://localhost:27017"
MONGODB_DB="notifyhub"
MONGODB_APP_NAME="notifyhub-api"
MONGODB_CONNECT_TIMEOUT_MS=10000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=10000

# Providers (LOCAL = point to external mock services by URL only)
EMAIL_PROVIDER_BASE_URL="http://localhost:9010"
EMAIL_PROVIDER_API_KEY="local-email-token"

SMS_PROVIDER_BASE_URL="http://localhost:9020"
SMS_PROVIDER_API_KEY="local-sms-token"

PUSH_PROVIDER_BASE_URL="http://localhost:9030"
PUSH_PROVIDER_API_KEY="local-push-token"

PROVIDER_TIMEOUT_MS=5000
PROVIDER_RETRYABLE_STATUS_CODES=[408,429,500,502,503,504]

# Cache (pick one)
CACHE_BACKEND="lru"
CACHE_TTL_SECONDS=300
# or if using memcache:
# CACHE_BACKEND="memcache"
# MEMCACHE_HOST="localhost"
# MEMCACHE_PORT=11211
# MEMCACHE_TIMEOUT_MS=200
